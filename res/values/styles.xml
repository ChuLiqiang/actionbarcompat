<resources>

	<style name="Theme" parent="@android:style/Theme"/>

	<style name="Theme.Holo">
		<item name="android:windowTitleSize">@dimen/actionbarcompat_height</item>
		<item name="android:windowTitleBackgroundStyle">@style/Widget.ActionBar</item>
		<item name="android:windowContentOverlay">@drawable/actionbarcompat_shadow</item>

		<!-- for programmatic instantiation -->
		<item name="actionbarCompatTitleStyle">@style/Widget.ActionBarTitle</item>
		<item name="actionbarCompatItemStyle">@style/Widget.ActionBarItem</item>
		<item name="actionbarCompatItemHomeStyle">@style/Widget.ActionBarHomeItem</item>
		<item name="actionbarCompatProgressIndicatorStyle">@style/Widget.ActionBarProgressIndicator</item>
	</style>

	<style name="Theme.Holo.DialogWhenLarge"></style>

	<style name="Widget"/>

	<style name="Widget.ActionBar">
		<item name="android:background">#000000</item>
	</style>

	<style name="Widget.ActionBarItemBase">

		<!-- layout_width/height must be set in code -->
		<item name="android:scaleType">center</item>
		<item name="android:background">@drawable/actionbarcompat_menu_button</item>
	</style>

	<style name="Widget.ActionBarProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
		<item name="android:indeterminate">true</item>
	</style>

	<style name="Widget.ActionBarTitleBase">
		<item name="android:id">@id/actionbarcompat_title</item>
		<!-- layout_width/height/weight must be set in code -->
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">6dp</item>
		<item name="android:paddingRight">6dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
	</style>

	<style name="Widget.ActionBarTitle" parent="@style/Widget.ActionBarTitleBase">
		<item name="android:textColor">#ffffff</item>
	</style>

	<style name="Widget.ActionBarItem" parent="@style/Widget.ActionBarItemBase"></style>

	<style name="Widget.ActionBarHomeItem" parent="@style/Widget.ActionBarItemBase"></style>

</resources>